<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <context:annotation-config/>
    <context:component-scan base-package="org.example.ex_2"/>




    <bean id="marca" class="java.lang.String">
        <constructor-arg value="Mercedes"/>
    </bean>

    <bean id="pret" class="java.lang.Integer">
        <constructor-arg value="30000" type="int"/>
    </bean>

    <bean id="volum_portbagaj" class="java.lang.Integer">
        <constructor-arg value="250" type="int"/>
    </bean>

    <bean id="masa" class="java.lang.Integer">
        <constructor-arg value="2300" type="int"/>
    </bean>


</beans>